
<div class="col-xl-4 col-lg-5">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Projects</h6>
        </div>
        <div class="card-body">
            <h4 class="small font-weight-bold">Donation <span class="float-right"> <%= @activityTypes[:"donation"]%>%</span></h4>
            <div class="progress mb-4">
                <div class="progress-bar bg-danger" role="progressbar" style="width: <%= @activityTypes[:"donation"]%>%" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
    
            <h4 class="small font-weight-bold">Help <span class="float-right"><%= @activityTypes[:"help"]%>%</span></h4>
            <div class="progress mb-4">
                <div class="progress-bar bg-warning" role="progressbar" style="width: <%= @activityTypes[:"help"]%>%" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
    
            <h4 class="small font-weight-bold">Assist <span class="float-right"><%= @activityTypes[:"assist"]%>%</span></h4>
            <div class="progress mb-4">
                <div class="progress-bar" role="progressbar" style="width: <%= @activityTypes[:"assist"]%>%" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
        </div>
    </div>
</div>