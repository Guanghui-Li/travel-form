<% @reimbursement_form.each do |reim_form|%>

  <div class="card shadow mb-4">
    <!-- Card Header - Dropdown -->
    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
        <div class="row container">
          <div class="col">
            <h6 class="m-0 font-weight-bold text-primary">Destination: <%= trip_destination(reim_form.trip.destination)%></h6>
          </div>
          <div class="col">
            <h6 class="m-0 font-weight-bold text-primary">Start Date: <%= reim_form.trip.date_start%></h6>
          </div>
          <div class="col">
            <h6 class="m-0 font-weight-bold text-primary">End Date: <%= reim_form.trip.date_end%></h6>
          </div>
          <div class="col">
            <h6 class="m-0 font-weight-bold text-primary">Form Status: <%= reim_form.status.name%></h6>
          </div>
          
        </div>
      <div class="dropdown no-arrow">
        <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
        </a>
        <div class="dropdown-menu dropdown-menu-right shadow animated--fade-in" aria-labelledby="dropdownMenuLink">
          <div class="dropdown-header">Actions:</div>
          <%= link_to 'Detail', manage_reimform_payment_show_path(reim_form.trip), class: "dropdown-item" %>
        </div>
      </div>
    </div>
    <!-- Card Body -->
    <div class="card-body">
      <h6 class="m-0 font-weight-bold text-primary">Purpose: </h6>
      <%= reim_form.trip.purpose %>
    </div>
  </div>
<% end %>
