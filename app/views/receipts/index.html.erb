<p id="notice"><%= notice %></p>

<h1>Receipts</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Reimbursement form</th>
      <th>Location</th>
      <th>Cost</th>
      <th>Receipt date</th>
      <th>Expense type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @receipts.each do |receipt| %>
      <tr>
        <td><%= image_tag(receipt.image) %></td>
        <td><%= receipt.reimbursement_form_id %></td>
        <td><%= receipt.location %></td>
        <td><%= receipt.cost %></td>
        <td><%= receipt.receipt_date %></td>
        <td><%= receipt.expense_type_id %></td>
        <td><%= link_to 'Show', receipt %></td>
        <td><%= link_to 'Edit', edit_receipt_path(receipt) %></td>
        <td><%= link_to 'Destroy', receipt, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Receipt', new_receipt_path %>
