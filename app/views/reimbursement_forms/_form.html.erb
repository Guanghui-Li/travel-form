<%= semantic_form_for reimbursement_form do |form| %>
  <% if reimbursement_form.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(reimbursement_form.errors.count, "error") %> prohibited this reimbursement_form from being saved:</h2>

      <ul>
      <% reimbursement_form.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="col-xl-12 col-md-12 mb-12">
    <div class="card shadow h-100 py-2">
      <div class="card-header">
        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Requests Money</div>
      </div>
      <div class="card-body">
        <div class="row no-gutters align-items-center">
          <div class="col mr-2">
            <div class="table-responsive text-center">
              <table class="table table-borderless">
              
                <tbody>
                  <% @requests.each do |request| %>
                    <tr>
                      <td><%= request.department.name %></td>
                      <td><%= number_to_currency request.amount %></td>
                      <td><%= request.status.name %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
        </br>
      </div>
    </div>
  </div>


  <div class="field">
      <%=form.hidden_field :status_id, :value => @status_id %>
  </div>

  <div class="field">
    <%= form.hidden_field :employee_id, :value => current_employee.id %>
  </div>

  <div class="form-group">
    <%= form.hidden_field :trip_id, id: :reimbursement_form_trip_id , :value => @trip.id%>
  </div>
  
  
  <div class="receipts_request">
  
    <%= form.label :receipts_request %>
    <%= form.semantic_fields_for :receipts_request, ReceiptsRequest.new do |receipt_request| %>

  
    <div class="receipts">
        <%= form.label :receipts %>
        <%= form.semantic_fields_for :receipts, Receipt.new do |receipt| %>
          <%= render 'receipt_fields', :f => receipt%>
        <% end %>
        <div class='links'>
          <%= link_to_add_association form, :receipts do %>
              <i class="fas fa-plus-circle"></i>
          <% end %>
        </div>
    </div>
    
    <% end %>
        <div class='links'>
          <%= link_to_add_association form, :receipts_request do %>
              <i class="fas fa-plus-circle"></i>
          <% end %>
        </div>
  </div>


  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
