<div class="row">
  <div class="col-xl-6 col-md-6 mb-6">
    <div class="card shadow h-100 py-2">
      <div class="card-header">
        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Receipt</div>
      </div>
      <div class="card-body">
        <div class="row no-gutters align-items-center">
          <div class="col mr-2">
            <div class="table-responsive text-center">
              <table class="table table-borderless">
                <thead class="thead-light">
                  <tr>
                    <th>Type</th>
                    <th>Cost</th>
                    <th>Location</th>
                    <th>Receipt Date</th>
                    <th colspan="1"></th>
                  </tr>
                </thead>
                
                  
                <tbody>
            
                  <% @receipts_request.each do |receipts_request| %>
                    <% @id = receipts_request.id%>
                    <% @receipts = Receipt.where(receipts_request_id: @id) %>
                    
                    <% @receipts.each do |receipt| %>
                      <tr>
                        <td><%= receipt.expense_type.name %></td>
                        <td><%= number_to_currency receipt.cost %></td>
                        <td><%= receipt.location %></td>
                        <td><%= receipt.receipt_date %></td>
                        <td>
                          <div class="dropdown no-arrow">
                            <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                              <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400 float-right"></i>
                            </a>
                            <div class="dropdown-menu dropdown-menu-right shadow animated--fade-in" aria-labelledby="dropdownMenuLink">
                              <div class="dropdown-header">Actions:</div>
                              <%= link_to 'Edit', edit_receipt_path(receipt), class: "dropdown-item" %>
                              <%= link_to 'Delete', receipt, method: :delete, data: { confirm: 'Are you sure?' }, class: "dropdown-item" %>
                            </div>
                          </div>
                        </td>
                      </tr>
                    <%end%>
                    <thead class="thead-dark">
                      <tr >
                        <th align="right">Total Cost:</th>
                        <th ><%= receipts_request.total_amount%></th>
                        <th colspan="3"></th>
                      </tr>
                    </thead>
                  <%end%>
                </tbody>
              </table>
            </div>
          </div>
          <div class="col-auto">
            <i class="fas fa-gift fa-2x text-gray-300"></i>
          </div>
        </div>
        </br>
      </div>
    </div>
  </div>
  
  <div class="col-xl-6 col-md-6 mb-6">
    <div class="card shadow h-100 py-2">
      <div class="card-header">
        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Requests</div>
      </div>
      <div class="card-body">
        <div class="row no-gutters align-items-center">
          <div class="col mr-2">
            <div class="table-responsive text-center">
              <table class="table table-borderless">
                <thead class="thead-light">
                  <tr>
                    <th>Department</th>
                    <th>Amount</th>
                    <th>Status</th>
                    <th colspan="1"></th>
                  </tr>
                </thead>
              
                <tbody>
                  <% @requests.each do |request| %>
                    <% @total_reimb_budget += request.amount %>
                    <tr>
                      <td><%= request.department.name %></td>
                      <td><%= number_to_currency request.amount %></td>
                      <td><%= request.status.name %></td>
                      <td>
                        <div class="dropdown no-arrow">
                          <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400 float-right"></i>
                          </a>
                          <div class="dropdown-menu dropdown-menu-right shadow animated--fade-in" aria-labelledby="dropdownMenuLink">
                            <div class="dropdown-header">Actions:</div>
                            <%= link_to 'Edit', edit_request_path(request), class: "dropdown-item" %>
                            <%= link_to 'Delete', request, method: :delete, data: { confirm: 'Are you sure?' }, class: "dropdown-item" %>
                          </div>
                        </div>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
          <div class="col-auto">
            <i class="fas fa-money-check-alt fa-2x text-gray-300"></i>
          </div>
        </div>
        </br>
      </div>
    </div>
  </div>
  </div>
  </br>
  </br>
  
  