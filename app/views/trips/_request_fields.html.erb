<div class='nested-fields'>
    <%= f.inputs do %>
        <div class="form-group">
          <%= f.label :department %>
          <%= f.collection_select :department_id, Department.order('name ASC'), :id, :name, {id: :request_department}, {class: "form-control"} %>
        </div>
        
        <div class="form-group">
          <%= f.label :amount %>
          <%= f.number_field :amount, id: :request_amount, class: "form-control"%>
        </div>
        
        <%= link_to_remove_association "Remove request", f %>
    <% end %>
</div>